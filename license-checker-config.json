{
  "ignore": [
    ".github",
    ".husky",
    "**/.*",
    "**/*.http",
    "**/*.lock",
    "**/*.md",

    "build",
    "public",
    "src/assets",

    "api-docs",
    "log",
    "tokens",
    "WhatsAppImages"

  ],
  "license": "LICENSE.header",
  "licenseFormats": {
    "js|ts": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "dotfile": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
